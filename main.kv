<Content>:
    cols: 1
    adaptive_height: True
    pos_hint: {"top": 1}
    padding: dp(10), dp(10)
    spacing: dp(4)

<AskView>:
    id: askView
    orientation: "vertical"
    padding: "20dp"
    size_hint: 0.98, None
    height: root.ids.textAsk.height + 35

    ScrollView:
        do_scroll_y: True
        BoxLayout:
            id: textAsk
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            MDLabel:

                canvas.before:
                    Color:
                        rgba: 0,0,0,0 # цвет фона текста
                    Rectangle:

                        pos: self.pos
                        size: self.size


                height: self.texture_size[1]

                size_hint_y: None
                text: root.text
                multiline: True
<AnswerView>:
    orientation: "vertical"
    padding: "20dp"
    size_hint: 0.98, None
    size: 0, 200

    # pos_hint: {"center_x": .5, "top": 0.95}
    ScrollView:
        do_scroll_y: True
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            MDLabel:
                canvas.before:
                    Color:
                        rgba: 0,0,0,0 # цвет фона текста
                    Rectangle:
                        pos: self.pos
                        size: self.size
                height: self.texture_size[1]
                size_hint_y: None
                text: root.text
                multiline: True



Screen:
    name: "account"
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height


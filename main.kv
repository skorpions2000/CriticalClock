<Content>:
    cols: 1
    adaptive_height: True
    pos_hint: {"top": 1}
    padding: dp(10), dp(10)
    spacing: dp(4)

<AskView>:
    id: askView
    orientation: "vertical"
    padding: "20dp"
    size_hint: 0.98, None
    height: root.ids.textAsk.height + 35

#    ScrollView:
#        do_scroll_y: True
    BoxLayout:
        id: textAsk
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            spacing: dp(7)
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(4)
                adaptive_height: True
                MDCard:
                    size_hint: None, None
                    size: 100, 100
                    AsyncImage:
                        size_hint: None, None
                        size: 100, 100
                        source: 'img/img.png'
                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    spacing: dp(4)
                    MDCard:
                        size_hint: 1, None
                        size: 0, 50
                        MDIconButton:
                            pos_hint: {'center_y': .5}
                            icon: 'cards-heart'

                        MDIconButton:
                            pos_hint: {'center_y': .5}
                            icon: 'chat'

                    MDCard:
                        size_hint: 1, None
                        size: 0, 50


                        MDLabel:
                            canvas.before:
                                Color:
                                    rgba: 0,0,0,0 # цвет фона текста
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            pos_hint: {"top": 1}
                            height: self.texture_size[1]
                            size_hint_y: None
                            text: root.question_content
                            multiline: True
            MDLabel:
                canvas.before:
                    Color:
                        rgba: 0,0,0,0 # цвет фона текста
                    Rectangle:
                        pos: self.pos
                        size: self.size
                height: self.texture_size[1]
                size_hint_y: None
                text: root.question_detail
                multiline: True


<AnswerView>:
    orientation: "vertical"
    padding: "20dp"
    size_hint: 0.98, None
    size: 0, 200

    # pos_hint: {"center_x": .5, "top": 0.95}
    ScrollView:
        do_scroll_y: True
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            MDLabel:
                canvas.before:
                    Color:
                        rgba: 0,0,0,0 # цвет фона текста
                    Rectangle:
                        pos: self.pos
                        size: self.size
                height: self.texture_size[1]
                size_hint_y: None
                text: root.text
                multiline: True



Screen:
    name: "account"
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height


<Content>:
    cols: 1
    adaptive_height: True
    pos_hint: {"top": 1}
    padding: dp(10), dp(10)
    spacing: dp(4)



Screen:
    name: "account"
    ScrollView:
        do_scroll_y: True
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            MDCard:
                Content:

                    AskView:
                        orientation: "vertical"
                        padding: "20dp"
                        size_hint: 0.98, None
                        size: 0, root.height / 2
                        # pos_hint: {"center_x": .5, "top": 0.95}
                        ScrollView:
                            do_scroll_y: True
                            BoxLayout:
                                orientation: 'vertical'
                                size_hint_y: None
                                height: self.minimum_height
                                MDLabel:
                                    canvas.before:
                                        Color:
                                            rgba: 0,0,0,0 # цвет фона текста
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                    height: self.texture_size[1]
                                    size_hint_y: None
                                    text: "root.AskView.text"
                                    multiline: True
                    AnswerView:
                        orientation: "vertical"
                        padding: "20dp"
                        size_hint: 0.98, None
                        size: 0, root.height / 2
                        # pos_hint: {"center_x": .5, "top": 0.95}
                        ScrollView:
                            do_scroll_y: True
                            BoxLayout:
                                orientation: 'vertical'
                                size_hint_y: None
                                height: self.minimum_height
                                MDLabel:
                                    canvas.before:
                                        Color:
                                            rgba: 0,0,0,0 # цвет фона текста
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                    height: self.texture_size[1]
                                    size_hint_y: None
                                    text: "root.text11"
                                    multiline: True
Screen:
    name: "account"
    MDCard:
        MDGridLayout:
            cols: 2
            adaptive_height: True
            pos_hint: {"top": 1}
            padding: dp(10), dp(10)
            spacing: dp(4)
            MDCard:
                orientation: "vertical"
                padding: "20dp"
                size_hint: 0.98, None
                size: 0, "180dp"
                pos_hint: {"center_x": .5, "top": 0.95}
                AnchorLayout:
                    anchor_x: "right"
                    size_hint_y: 1
                    height: avatar.height

                    Image:
                        id: avatar
                        size_hint: None, None
                        size: "100dp", "100dp"
                        allow_stretch: True
                        source: "img/img.png"
                    BoxLayout:
                        orientation: "vertical"
                        pos_hint: {"top": 1}
                        anchor_x: "left"
                        size_hint_y: 1
                        spacing: dp(5)
                        height: avatar.height

                        MDCard:

                            size_hint: None, None
                            size: "155dp", "24dp"


                            MDLabel:
                                id: user_name
                                size_hint: None, None
                                size: "100dp", "25dp"
                                text: "app.username"

                        MDCard:

                            size_hint: None, None
                            size: "155dp", "24dp"
                            text: "app.username"

                            MDLabel:
                                text: "text 1"

                        MDCard:

                            size_hint: None, None
                            size: "155dp", "24dp"
                            text: "app.username"

                            MDLabel:
                                text: "text 1"

